<h1>Register</h1>


<%= form_for :user, url: '/user/register' do |f| %>
  <div class='register-names'>
  <label>FirstName:</label> <%= f.text_field :firstname %> 
  <label>LastName: </label> <%= f.text_field :lastname %>
  <label>Email:    </label> <%= f.text_field :email %>
  <label>Password: </label> <%= f.password_field :password %>
  <label>Password Confirmation:</label> <%= f.password_field :password_confirmation %>
  <div class='register-submit'><%= f.submit "Submit", class: 'btn btn-info register-submit' %> </div>
  </div>

<% end %>